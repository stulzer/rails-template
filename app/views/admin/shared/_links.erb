<% if controller_name != "sessions" %>
  <%= link_to (icon "arrow-circle-left", t(".back")), new_session_path(resource_name), class: "button-green" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != "passwords" %>
  <%= link_to (icon "key", t(".forgot_your_password")), new_password_path(resource_name), class: "button-red" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to t(".confirmation_instruction"), new_confirmation_path(resource_name), class: "button-blue" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
  <%= link_to t(".unlock_instruction"), new_unlock_path(resource_name), class: "button-blue" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t(".login_with_provider"), omniauth_authorize_path(resource_name, provider), class: "button-blue" %>
  <% end %>
<% end %>
