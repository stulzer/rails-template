<div class="content">
  <h2>Esqueceu a senha?</h2>
  
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, :autofocus => true, :class => "required email" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Enviar", :class => "button-blue" %>
      <%= render "admin/shared/links" %>
    </div>
  <% end %>
  
</div>
