<div class="content">
  <h2>Mude sua senha</h2>
  
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="field">
      <%= f.label :password, "Nova senha" %>
      <%= f.password_field :password, :autofocus => true, :class => "required" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, "Confirmar nova senha" %>
      <%= f.password_field :password_confirmation, :class => "required", :minlength => 8 %>
    </div>
  
    <div class="actions">
      <%= f.submit "Mudar minha senha", :class => "button-blue", :minlength => 8, :equalTo => "#admin_password" %>
      <%= render "admin/shared/links" %>
    </div>
  <% end %>
  
</div>
